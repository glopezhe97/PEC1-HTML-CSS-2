{
    "extends": [
        "stylelint-config-recommended-scss"
    ],
    "plugins": [
        "stylelint-order"
      ],
    "rules": {
        "selector-class-pattern": "^.[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
        "order/order": [
            "custom-properties",
            "dollar-variables",
            "declarations",
            "at-rules",
            "rules"
          ]
    }
   }